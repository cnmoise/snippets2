@model TeamDLCFoodShop.Models.ViewModels.HomeViewModel
<h2>@Model.Title</h2>

@foreach(var food in Model.Foods){

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@food.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@food.Price.ToString("c")</h3>
            <h3>@food.Name</h3>
            <h3>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@food.Id">@food.Name</a>
            </h3>
            <p>@food.ShortDescription</p>
        </div>
    </div>
</div>

}
